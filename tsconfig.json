{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "allowJs": true,
    "target": "es2016",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["dist", "node_modules"]
}
